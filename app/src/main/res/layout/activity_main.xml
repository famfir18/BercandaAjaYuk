<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_anim"
        android:layout_width="550dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-50dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/title"
            android:src="@drawable/title"
            android:scaleType="centerCrop"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="270dp"/>


            <RelativeLayout
                android:id="@+id/layout_nickname"
                android:layout_below="@+id/title"
                android:layout_width="300dp"
                android:layout_centerHorizontal="true"
                android:layout_height="300dp"
                android:visibility="invisible"
                android:background="@drawable/rounded"
                android:orientation="vertical">

        <TextView
            android:id="@+id/nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/chalkduster"
            android:gravity="center"
            android:layout_marginTop="55dp"
            android:textSize="23dp"
            android:text="Create Nickname"
            android:textColor="#FFF" />


        <EditText
            android:id="@+id/et_nickname"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:ems="12"
            android:layout_below="@+id/nick"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textSize="15dp"
            android:textCursorDrawable="@drawable/curzor"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:fontFamily="@font/chalkduster"
            android:background="@drawable/bg_et_nickname"
            android:inputType="textPersonName"/>

                <ImageButton
                    android:id="@+id/btn_confirm"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#00855F5F"
                    android:scaleType="centerInside"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/selector_confirm" />

            </RelativeLayout>


    </RelativeLayout>


</FrameLayout>