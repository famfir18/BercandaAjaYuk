<?xml version="1.0" encoding="utf-8"?>

    <FrameLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:gravity="center"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:background="@color/transparent"
        android:layout_height="400dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:background="@color/transparent"
            android:src="@drawable/dialog_exit"/>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_qr"
                android:layout_width="120dp"
                android:layout_marginTop="30dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/image_exit" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_gravity="center"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/doodle"
                    android:textColor="#333333"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:text=" Yakin Mau Keluar?"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnNo"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:text="Ntar"
                        android:textColor="#fff"
                        android:fontFamily="@font/chalkduster"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/selector_nanto"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btnYes"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:text="Iya"
                        android:fontFamily="@font/chalkduster"
                        android:background="@drawable/bg_btn1"
                        android:textAllCaps="false" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
</FrameLayout>
