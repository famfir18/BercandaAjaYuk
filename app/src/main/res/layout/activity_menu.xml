<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuActivity">

    <ImageView
        android:id="@+id/image_anim"
        android:layout_width="550dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-50dp"
        android:adjustViewBounds="true"
        android:background="@drawable/bg_doodle"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/title"
            android:src="@drawable/title"
            android:layout_width="wrap_content"
            android:layout_height="170dp"/>


        <LinearLayout
            android:id="@+id/layout_nickname"
            android:layout_below="@+id/title"
            android:layout_width="300dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nick"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:fontFamily="@font/chalkduster"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:visibility="invisible"
                android:layout_marginBottom="80dp"
                android:background="@drawable/banner"
                android:textSize="15dp"
                android:text="Welcome, Nick"
                android:textColor="#FFF" />


            <ImageButton
                android:id="@+id/btn_create"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@id/nick"
                android:layout_gravity="center"
                android:backgroundTint="#00855F5F"
                android:scaleType="centerCrop"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/selector_create_room" />

            <ImageButton
                android:id="@+id/btn_join"
                android:layout_width="200dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:backgroundTint="#00855F5F"
                android:scaleType="centerCrop"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/selector_join_room" />

            <ImageButton
                android:id="@+id/btn_settings"
                android:layout_width="200dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:backgroundTint="#00855F5F"
                android:scaleType="centerCrop"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/selector_settings" />

          <!--  <ImageButton
                android:id="@+id/btn_about"
                android:layout_width="200dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:backgroundTint="#00855F5F"
                android:scaleType="centerCrop"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/selector_about" />-->

            <ImageButton
                android:id="@+id/btn_exit"
                android:layout_width="200dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:backgroundTint="#00855F5F"
                android:scaleType="centerCrop"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/selector_exit" />


        </LinearLayout>


    </RelativeLayout>


</FrameLayout>