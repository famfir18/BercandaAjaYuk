<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:background="#00FFFFFF"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:src="@drawable/id_room"/>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:orientation="vertical">

            <TextView
                android:layout_gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:fontFamily="@font/doodle"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Your ID room is : "/>


                <TextView
                    android:id="@+id/tv_id_room"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:text="qfefgr"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:fontFamily="@font/chalkduster"
                    android:background="@drawable/bg_btn3"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btn_share_id"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:text="Share id"
                    android:textSize="12dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/chalkduster"
                    android:background="@drawable/bg_btn1"
                    android:textAllCaps="false" />

            </LinearLayout>

</FrameLayout>
