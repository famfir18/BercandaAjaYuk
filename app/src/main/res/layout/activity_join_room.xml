<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".JoinRoomActivity">

    <ImageView
        android:id="@+id/image_anim"
        android:layout_width="550dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-50dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/title"
            android:src="@drawable/title"
            android:layout_marginBottom="40dp"
            android:layout_width="wrap_content"
            android:layout_height="170dp"/>


        <LinearLayout
            android:id="@+id/layout_nickname"
            android:layout_below="@+id/title"
            android:layout_width="300dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_create_room"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/doodle"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:text=" Room Code"
                android:textColor="#000" />


            <EditText
                android:id="@+id/et_room_code"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:textCursorDrawable="@drawable/curzor"
                android:backgroundTint="#81D4FA"
                android:scaleType="centerCrop"
                android:textAlignment="center"
                android:inputType="textCapCharacters"
                android:textColor="#fff"
                android:fontFamily="@font/chalkduster"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_create_room_press" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/doodle"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:text=" Room Password"
                android:textColor="#000" />

            <EditText
                android:id="@+id/et_room_password"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:backgroundTint="#FFAA00"
                android:scaleType="centerCrop"
                android:textAlignment="center"
                android:textCursorDrawable="@drawable/curzor"
                android:inputType="numberPassword"
                android:textColor="#FFF"
                android:fontFamily="@font/chalkduster"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_join_game" />


            <Button
                android:id="@+id/btn_join"
                android:layout_width="200dp"
                android:layout_height="74dp"
                android:layout_gravity="center"
                android:backgroundTint="#B39DDB"
                android:scaleType="centerCrop"
                android:layout_marginTop="30dp"
                android:text="Join Room"
                android:textSize="12dp"
                android:textColor="#FFF"
                android:fontFamily="@font/chalkduster"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_about" />


        </LinearLayout>


    </RelativeLayout>


</FrameLayout>